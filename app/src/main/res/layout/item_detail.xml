<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/border_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/detailviewitem_profile_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="20dp"
            android:src="@drawable/usr_profile"
            android:maxLines="5" />
        <TextView
            android:id="@+id/detailviewitem_profile_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User name"
            android:textSize="16sp"
            android:fontFamily="@font/katuri" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <ImageView
        android:id="@+id/detailviewitem_profile_imageview_content"
        android:layout_width="339dp"
        android:layout_height="450dp"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />
    <LinearLayout
        android:id="@+id/layout33"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp">

        <ImageView
            android:id="@+id/detailviewitem_favrite_imageview"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_baseline_favorite_border_24"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/detailviewitem_favoritecounter_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="8dp"
            android:text="좋아요 0"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:fontFamily="@font/katuri" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/detailviewitem_explain_textview"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:text="Explain content"
            android:textSize="20sp"
            android:fontFamily="@font/katuri" />

    </LinearLayout>

</LinearLayout>